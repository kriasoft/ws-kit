{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "lib": ["ES2022"],
    "jsx": "react-jsx",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "ignoreDeprecations": "5.0",

    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    "newLine": "lf",
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@ws-kit/bun": ["packages/bun/src/index.ts"],
      "@ws-kit/client": ["packages/client/src/index.ts"],
      "@ws-kit/client/valibot": ["packages/client/valibot/src/index.ts"],
      "@ws-kit/client/zod": ["packages/client/zod/src/index.ts"],
      "@ws-kit/cloudflare": ["packages/cloudflare/src/index.ts"],
      "@ws-kit/core": ["packages/core/src/index.ts"],
      "@ws-kit/memory": ["packages/memory/src/index.ts"],
      "@ws-kit/middleware": ["packages/middleware/src/index.ts"],
      "@ws-kit/pubsub": ["packages/pubsub/src/index.ts"],
      "@ws-kit/redis": ["packages/redis/src/index.ts"],
      "@ws-kit/valibot": ["packages/valibot/src/index.ts"],
      "@ws-kit/zod": ["packages/zod/src/index.ts"]
    },

    "types": ["bun"]
  },
  "exclude": ["**/dist", "**/.turbo", "**/node_modules"]
}
