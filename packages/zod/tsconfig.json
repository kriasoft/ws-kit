{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Project References
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // Paths
    "rootDir": "src",
    "outDir": "dist",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Environment
    "typeRoots": ["./src", "../../node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../plugins" },
    { "path": "../pubsub" }
  ]
}
