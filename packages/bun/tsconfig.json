{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Project References
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // Paths
    "rootDir": "src",
    "outDir": "dist",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Environment
    "types": ["bun"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"],
  "references": [{ "path": "../core" }]
}
