{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Project References
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // Paths
    "rootDir": "src",
    "outDir": "dist",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Environment
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
