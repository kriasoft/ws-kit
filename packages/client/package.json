{
  "name": "@ws-kit/client",
  "version": "0.3.0",
  "description": "Universal WebSocket client for WS-Kit with type-safe message validation for browser and Node.js",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "author": "Konstantin Tarkus",
  "homepage": "https://kriasoft.com/ws-kit/",
  "bugs": "https://github.com/kriasoft/ws-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/ws-kit.git",
    "directory": "packages/client"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/koistya"
  },
  "keywords": [
    "websocket",
    "client",
    "browser",
    "real-time",
    "type-safe",
    "typescript",
    "universal-client",
    "isomorphic",
    "message-client",
    "schema-validation",
    "zod-support",
    "valibot-support",
    "browser-client",
    "node-client",
    "type-inference",
    "client-library"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/zod/index.d.ts",
      "default": "./dist/zod/index.js"
    },
    "./valibot": {
      "types": "./dist/valibot/index.d.ts",
      "default": "./dist/valibot/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@ws-kit/valibot": "workspace:^",
    "@ws-kit/zod": "workspace:^"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
