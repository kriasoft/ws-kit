{
  "name": "@ws-kit/core",
  "version": "0.0.1",
  "type": "module",
  "description": "Tiny, type-safe WebSocket router",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./pubsub": {
      "types": "./dist/capabilities/pubsub/index.d.ts",
      "bun": "./src/capabilities/pubsub/index.ts",
      "import": "./dist/capabilities/pubsub/index.js"
    },
    "./test": {
      "types": "./dist/test/index.d.ts",
      "bun": "./src/test/index.ts",
      "import": "./dist/test/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "websocket",
    "router",
    "type-safe",
    "rpc",
    "pub-sub"
  ],
  "license": "MIT"
}
