{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Project References
    "composite": true,
    "tsBuildInfoFile": "dist/check.tsbuildinfo",

    // Paths
    "rootDir": ".",
    "outDir": "dist",

    // Emit
    "noEmit": true,

    // Type Checking
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.test.ts", "test/**/*.ts"],
  "references": [{ "path": "." }, { "path": "../core" }]
}
