{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "example",
    "docs",
    "*.test.ts",
    "eslint.config.ts",
    "build.ts"
  ]
}
