{
  "name": "ws-kit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Type-safe WebSocket router for Bun with Zod or Valibot validation",
  "license": "MIT",
  "packageManager": "bun@1.3.1",
  "author": "Kriasoft <hello@kriasoft.com>",
  "contributors": [
    {
      "name": "Konstantin Tarkus",
      "url": "https://github.com/sponsors/koistya"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/ws-kit.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.38.0",
    "@types/bun": "^1.3.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "hono": "^4.10.3",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "valibot": "^1.1.0",
    "vitepress": "^1.6.4",
    "zod": "^4.1.12"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc --build && tsc --noEmit",
    "test": "bun test",
    "test:types": "tsc --noEmit",
    "lint": "eslint --report-unused-disable-directives .",
    "lint:fix": "eslint --report-unused-disable-directives --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:build": "vitepress build",
    "docs:deploy": "gh-pages -d .vitepress/dist"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "bun prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  }
}
