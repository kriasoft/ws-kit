{
  "name": "ws-kit",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "WS-Kit â€” Type-Safe WebSocket router for Bun and Cloudflare",
  "license": "MIT",
  "packageManager": "bun@1.3.2",
  "author": "Kriasoft <hello@kriasoft.com>",
  "contributors": [
    {
      "name": "Konstantin Tarkus",
      "url": "https://github.com/sponsors/koistya"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/ws-kit.git"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@cloudflare/workers-types": "^4.20251127.0",
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint": "^9.39.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.10.7",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "mermaid": "^11.12.1",
    "prettier": "^3.7.1",
    "typescript-eslint": "^8.48.0",
    "typescript": "^5.9.3",
    "valibot": "^1.2.0",
    "vitepress-mermaid-renderer": "^1.1.5",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vitepress": "2.0.0-alpha.12",
    "vue": "^3.5.25",
    "zod": "^4.1.13"
  },
  "scripts": {
    "prepare": "husky",
    "build": "bun tsc -b",
    "rebuild": "bun tsc -b --clean && bun tsc -b",
    "clean": "bun tsc -b --clean",
    "test": "bun test",
    "test:patterns": "bash ./scripts/validate-patterns.sh && bun test examples/**/conformance.test.ts",
    "typecheck": "bun tsc -b tsconfig.json && bun tsc -b tsconfig.tests.json",
    "lint": "eslint --report-unused-disable-directives .",
    "lint:fix": "eslint --report-unused-disable-directives --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:build": "vitepress build",
    "docs:dev": "vitepress dev",
    "docs:preview": "vitepress preview",
    "docs:deploy": "gh-pages -d .vitepress/dist"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "bun prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  }
}
