{
  "name": "ws-kit",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "WS-Kit â€” Type-Safe WebSocket router for Bun and Cloudflare",
  "license": "MIT",
  "packageManager": "bun@1.3.3",
  "author": "Kriasoft <hello@kriasoft.com>",
  "contributors": [
    {
      "name": "Konstantin Tarkus",
      "url": "https://github.com/sponsors/koistya"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/ws-kit.git"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@cloudflare/workers-types": "^4.20260118.0",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "gh-pages": "^6.3.0",
    "globals": "^17.0.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.11.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "mermaid": "^11.12.2",
    "prettier": "^3.8.0",
    "srcpack": "^0.1.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "valibot": "^1.2.0",
    "vitepress": "2.0.0-alpha.15",
    "vitepress-mermaid-renderer": "^1.1.7",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.27",
    "zod": "^4.3.5"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "bun tsc -b --clean",
    "build": "bun tsc -b",
    "rebuild": "bun tsc -b --clean && bun tsc -b",
    "prepublishOnly": "bun run scripts/prepublish.ts",
    "release": "bun run scripts/prepublish.ts && bun changeset publish",
    "test": "bun test",
    "test:unit": "bun test packages/",
    "test:e2e": "bun test tests/integration tests/e2e",
    "test:bench": "bun test tests/benchmarks",
    "test:patterns": "bash ./scripts/validate-patterns.sh && bun test examples/**/conformance.test.ts",
    "typecheck": "tsc --build tsconfig.check.json",
    "lint": "eslint --report-unused-disable-directives .",
    "lint:fix": "eslint --report-unused-disable-directives --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:build": "vitepress build",
    "docs:dev": "vitepress dev",
    "docs:preview": "vitepress preview",
    "docs:deploy": "gh-pages -d .vitepress/dist"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  }
}
