{
  "name": "ws-kit",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "WS-Kit â€” Type-Safe WebSocket router for Bun and Cloudflare",
  "license": "MIT",
  "packageManager": "bun@1.3.1",
  "author": "Kriasoft <hello@kriasoft.com>",
  "contributors": [
    {
      "name": "Konstantin Tarkus",
      "url": "https://github.com/sponsors/koistya"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kriasoft/ws-kit.git"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@eslint/js": "^9.38.0",
    "@types/bun": "^1.3.1",
    "bun-types": "^1.3.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "expect-type": "^1.1.6",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "hono": "^4.10.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "mermaid": "^11.12.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "valibot": "^1.1.0",
    "vitepress": "^1.6.4",
    "vitepress-mermaid-renderer": "^1.0.19",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.22",
    "zod": "^4.1.12"
  },
  "scripts": {
    "prepare": "husky",
    "prepack": "bun run scripts/prepack.ts",
    "build": "bun tsc -b",
    "rebuild": "bun tsc -b --clean && bun tsc -b",
    "clean": "bun tsc -b --clean",
    "test": "bun test",
    "test:patterns": "bash ./scripts/validate-patterns.sh && bun test examples/**/conformance.test.ts",
    "typecheck": "bun tsc -b && bun tsc --noEmit",
    "lint": "eslint --report-unused-disable-directives .",
    "lint:fix": "eslint --report-unused-disable-directives --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:build": "vitepress build",
    "docs:deploy": "gh-pages -d .vitepress/dist"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "bun prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80
  }
}
